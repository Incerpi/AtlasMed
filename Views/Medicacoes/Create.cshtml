@model AtlasMed_GS.Models.Medicacao

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AtlasMed</title>

    <!-- Fontes e Bootstrap -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f9fd;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin-top: 40px;
        }

        .form-container {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
        }

        h2 {
            font-weight: 600;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: 500;
        }

        .btn-primary {
            margin-top: 10px;
        }

        .back-link {
            margin-top: 20px;
            display: inline-block;
        }

        footer {
            text-align: center;
            padding: 20px;
            font-size: 0.9rem;
            color: #777;
        }
    </style>
</head>
<body>

            <h2>Cadastrar Medicação</h2>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="form-label">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descricao" class="form-label">Descrição</label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PrincipioAtivo" class="form-label">Princípio Ativo</label>
                    <input asp-for="PrincipioAtivo" class="form-control" />
                    <span asp-validation-for="PrincipioAtivo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Dose" class="form-label">Dose</label>
                    <input asp-for="Dose" class="form-control" />
                    <span asp-validation-for="Dose" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Dosagem" class="form-label">Dosagem</label>
                    <input asp-for="Dosagem" class="form-control" />
                    <span asp-validation-for="Dosagem" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </form>

            <a class="back-link" asp-action="Index">← Voltar para a lista</a>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>--
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
