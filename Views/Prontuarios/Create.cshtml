@model AtlasMed_GS.Models.Prontuario

@{
    ViewData["Title"] = "Cadastrar Prontuário";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AtlasMed</title>

    <!-- Fontes e Bootstrap -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f9fd;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin-top: 40px;
        }

        .form-container {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
        }

        h2 {
            font-weight: 600;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: 500;
        }

        .btn-primary {
            margin-top: 10px;
        }

        .back-link {
            margin-top: 20px;
            display: inline-block;
        }

        footer {
            text-align: center;
            padding: 20px;
            font-size: 0.9rem;
            color: #777;
        }
    </style>
</head>
<body>

            <h2>Cadastrar Prontuário</h2>
            <hr />
            <form asp-action="Create" asp-controller="Prontuarios" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="IdPaciente" class="control-label">Paciente:</label>
                    <select asp-for="IdPaciente" class="form-control" asp-items="ViewBag.IdPaciente"></select>
                    <span asp-validation-for="IdPaciente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sintomas" class="form-label">Sintomas</label>
                    <input asp-for="Sintomas" class="form-control" />
                    <span asp-validation-for="Sintomas" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="HorarioChegada" class="form-label">Horário de Chegada</label>
                    <input asp-for="HorarioChegada" class="form-control" />
                    <span asp-validation-for="HorarioChegada" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Alergias" class="form-label">Alergias</label>
                    <input asp-for="Alergias" class="form-control" />
                    <span asp-validation-for="Alergias" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="TipoSanguineo" class="form-label">Tipo Sanguíneo</label>
                    <select asp-for="TipoSanguineo" class="form-control" required>
                        <option value="">Selecione um Tipo Sanguíneo</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>
                    <span asp-validation-for="TipoSanguineo" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </form>

            <a class="back-link" asp-action="Index">← Voltar para a lista</a>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
